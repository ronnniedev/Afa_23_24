package clase;

import java.util.Scanner;

public class Calculadordeclaves {
	static Scanner keyboard = new Scanner(System.in);
	public static void main(String[] args) {
		// Escribir un numero entero y decir cuantas de las cifras que la componen son pares

		double num,numMemoria,comprobadorCifras,comprobador,pares,impares;
		
		System.out.println("Escribe un numero: ");
		num = keyboard.nextInt();
		
		numMemoria = num;
		comprobadorCifras = 0;
		comprobador = 0;
		pares = 0;
		impares = 0;
		
		while (numMemoria >= comprobador) { //contamos las cifras para saber cuantas vamos a contar
			
			comprobadorCifras++;
			comprobador = Math.pow(10, comprobadorCifras);
				
		}

		while (comprobadorCifras != 0) {
			comprobador = 0;
			num = numMemoria;
			comprobador = num% Math.pow(20, comprobadorCifras);
			
			if (comprobador == 0) {
				
				pares++;
				
			}else if (comprobador != 0) {
				
				impares++;
				
			}
			
			comprobadorCifras--;
			
		}System.out.println("Pares: " + pares + " Impares: " + impares);
		
		
	}

}

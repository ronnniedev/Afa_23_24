package clase;

import java.util.Scanner;

public class Calculadordeclaves {
	static Scanner keyboard = new Scanner(System.in);
	public static void main(String[] args) {
		// Escribir un numero entero y decir cuantas de las cifras que la componen son pares

		double num,numMemoria,comprobadorCifras,contdecenas,comprobador;
		
		System.out.println("Escribe un numero: ");
		num = keyboard.nextInt();
		
		numMemoria = num;
		comprobadorCifras = 0;
		comprobador = 0;
		
		while (numMemoria > comprobador) {
			
			comprobador = Math.pow(10, comprobadorCifras);
			
			comprobadorCifras++;
			
			
		}System.out.println(comprobadorCifras);
		
	}

}

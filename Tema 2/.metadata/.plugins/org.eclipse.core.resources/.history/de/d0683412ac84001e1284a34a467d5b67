package ficheros;

import java.util.Scanner;

public class Ejercicio7 {
	static Scanner keyboard = new Scanner(System.in);
	public static void main(String[] args) {
		/* Actividad 7
		 * Implementar un programa modular para realizar la conversión de
		 * grados Centígrados a grados Farenheit.
		 */
		
		System.out.println("Escriba los grados celsius a convertir");
		double grados = keyboard.nextDouble();
		
		
		centaFar(grados);
		

	}/**
	 * Calcula los grados Farenheit a partir de los celsius introducidos
	 * @param area : entero
	 */
	public static void centaFar (double grados) {
		
		double resul =  9.0 / 5 * grados +32;
		
		System.out.println(grados + " grados celsius equivalen a " + resul + " grados Farenheit");
		
		
	}
}

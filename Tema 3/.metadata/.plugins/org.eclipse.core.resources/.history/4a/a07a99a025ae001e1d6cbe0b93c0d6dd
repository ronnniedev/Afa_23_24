package ficheros;

import java.util.Iterator;
import java.util.Scanner;

public class Libreria2 {
	static Scanner keyboard = new Scanner(System.in);
	
	public static int [][] crearMatriz() {
		
		System.out.println("Escribe los lados que tiene la matriz cuadrada: ");
		int lados = keyboard.nextInt();
		
		int m [][] = new int [lados][lados];
		
		for (int i = 0; i < m.length ; i++) {
			for (int j = 0; j< m[0].length; j++) {
				m [i][j] = i+j;
			}
			
		}
		
		return m;
	}
	
	public static void mostrarMatriz (int [][] m) {
		
		System.out.println("------------->MostrarMatriz<-------------\n");
		
		for (int i = 0; i < m.length ; i++) {
			
			for (int j = 0; j < m[0].length ; j++) {
				System.out.print(m[i][j] + " ");
			}
			System.out.println();
		}
		System.out.println();
		
		
	}
	
	public static void trianguloSuperior (int m[][]) {
		
		int compSup = m[0].length-1;
		int compInf = 0;
		int espacios = 2;
		
		
		for (int i = 0; i < m.length ; i++) {
			for (int j = 0 ; j < m[0].length; j++) {
				
				if (compInf <= j && compSup >= j) {
					System.out.print(m[i][j] + " ");
				}
				
			}
			System.out.println();
			for (int cont = espacios ; cont > 0; cont--) {
				System.out.print(" ");
			}
			
			compSup -= 1;
			compInf += 1;
			espacios += 2;
		}
		
		
		
	}
	
	public static void trianguloInferior (int m [][]) {
		
		int compSup = m[0].length-1;
		int compInf = 0;
		
		
		for (int i = 0; i < m.length ; i++) {
			for (int j = 0 ; j < m[0].length; j++) {
				
				if (compInf >= j && compSup <= j) {
					System.out.print(m[i][j] + " ");
				}else System.out.print("  ");
				
			}
			
			if (compSup > compInf) {
				System.out.println();
			}
			
			
			compSup -= 1;
			compInf += 1;
		}
		
		
		
	}

}
